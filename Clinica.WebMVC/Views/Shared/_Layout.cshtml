    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse"></i> clinicCare
                </a>
                <div class="d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav d-flex">
                        @if(HttpContextAccesor.HttpContext?.Session.GetString(Constantes.JwtToken) != null
                        &&  HttpContextAccesor.HttpContext.Session.GetString(Constantes.JwtToken)!.Length > 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" herf="#">Hola @User.Identity?.Name </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Logout" >Salir</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Iniciar Sesion</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Registrarse</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="row justify-content-end m-auto">
        PartialView
